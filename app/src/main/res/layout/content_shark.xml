<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.upperz.sharktracker.Activities.SharkActivity"
    tools:showIn="@layout/activity_shark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sharkInformation">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Animal Information"
                    android:id="@+id/title1"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:id="@+id/icon_1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_clipboard"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commonNameTitle"
                    android:text="Common Name : "
                    android:layout_below="@id/title1"
                    android:layout_toRightOf="@id/icon_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/commonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title1"
                    android:layout_toRightOf="@+id/commonNameTitle"
                    android:layout_toEndOf="@+id/commonNameTitle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameTitle"
                    android:text="Name: "
                    android:layout_below="@id/commonNameTitle"
                    android:layout_toRightOf="@id/icon_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/commonName"
                    android:layout_toRightOf="@+id/nameTitle"
                    android:layout_toEndOf="@+id/nameTitle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sexTitle"
                    android:text="Sex: "
                    android:layout_toRightOf="@+id/icon_1"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/nameTitle"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameTitle"
                    android:layout_marginTop="5dp"
                    android:id="@+id/sex"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/sexTitle"
                    android:layout_toEndOf="@+id/sexTitle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sexTitle"
                    android:layout_marginTop="5dp"
                    android:id="@+id/speciesTitle"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/icon_1"
                    android:text="Species : "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sexTitle"
                    android:layout_marginTop="5dp"
                    android:id="@+id/species"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/speciesTitle" />

            </RelativeLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trackingInformation"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sharkInformation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title2"
                    android:textStyle="bold"
                    android:text="Tracking Information"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/icon_2"
                    android:src="@drawable/ic_action_define_location_96"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title2"
                    android:layout_toRightOf="@id/icon_2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Last Detection:"
                    android:id="@+id/dateTitle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title2"
                    android:layout_toRightOf="@id/dateTitle"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/date"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateTitle"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/icon_2"
                    android:layout_marginLeft="10dp"
                    android:text="Latitude:"
                    android:id="@+id/latitude_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateTitle"
                    android:id="@+id/latitude"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/latitude_title"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/latitude_title"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/icon_2"
                    android:id="@+id/longitude_title"
                    android:layout_marginLeft="10dp"
                    android:text="Longitude:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/latitude_title"
                    android:layout_marginTop="5dp"
                    android:id="@+id/longitude"
                    android:layout_toRightOf="@id/longitude_title"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/daysTrackedTitle"
                    android:layout_toRightOf="@+id/icon_2"
                    android:text="Days Tracked: "
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/longitude_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/days"
                    android:layout_toRightOf="@+id/daysTrackedTitle"
                    android:layout_below="@+id/longitude_title"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/distanceTitle"
                    android:text="Distance Traveled: "
                    android:layout_below="@+id/daysTrackedTitle"
                    android:layout_toRightOf="@+id/icon_2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/daysTracked"
                    android:layout_below="@+id/daysTrackedTitle"
                    android:layout_toRightOf="@+id/distanceTitle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/daysTrackedMilesTag"
                    android:text="Miles"
                    android:layout_below="@+id/daysTrackedTitle"
                    android:layout_toRightOf="@+id/daysTracked"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop = "5dp"/>-->


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trackingInformation"
            android:layout_marginTop="10dp"
            android:id="@+id/youtubeContainer">
        </FrameLayout>



    </RelativeLayout>



</android.support.v4.widget.NestedScrollView>
